@using Bestco.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<div class="row">

    <div class="col-md-8 col-md-offset-1">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "BadgeIn", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
               
                <h3>Use Bestco badge.</h3>
                <hr />
                
                <div class="form-group">
                    <label class = "col-md-2 control-label" for="supervisorId">Badge Number</label>
                    <div class="col-md-10">
                        <input id="badgeNumber" name="badgeNumber" placeholder="Scan or Enter Badge Number" style = "width:300px;" class="form-control" type="text" required>
                        <span class="help-block with-errors"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class = "col-md-2 control-label" for="supervisorId">Select Line</label>
                    <div class="col-md-10">
                        <select id="workcenters" name="workcenters" style = "width:300px;" class="form-control" required>
                            <option>  1   </option>
                            <option>  2   </option>
                            <option>  3   </option>

                        </select>
                        <span class="help-block with-errors"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
              
            }
        </section>
    </div>

</div>


